<LinearLayout
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:background="@drawable/bg_curve_top"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_marginTop="10sp"
        android:layout_gravity="center"
        android:background="@color/gray_color"
        android:layout_width="80dp"
        android:layout_height="2dp"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_margin="8dp"
                android:background="@drawable/bg_btn_clr"
                android:id="@+id/ll_api_response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_api_response"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="Api Response"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <ImageView
                    android:padding="5dp"
                    android:src="@drawable/ic_play_white"
                    android:id="@+id/iv_api_response_drop_down_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end|center"
                    android:gravity="center"
                    android:rotation="-90"/>
            </LinearLayout>
            <net.cachapa.expandablelayout.ExpandableLayout
                android:layout_margin="8dp"
                android:id="@+id/exp_api_response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:el_duration="400"
                app:el_expanded="true"
                app:el_parallax="0.5">
                <TextView
                    android:layout_marginTop="10sp"
                    android:id="@+id/tv_response"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:padding="8dp"
                    android:text="Apply"
                    android:textColor="@color/black"/>
            </net.cachapa.expandablelayout.ExpandableLayout>
            <LinearLayout
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/bg_btn_clr"
                android:id="@+id/ll_api_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_api_request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="Api Request"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <ImageView
                    android:padding="5dp"
                    android:src="@drawable/ic_play_white"
                    android:id="@+id/iv_api_request_drop_down_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end|center"
                    android:gravity="center"
                    android:rotation="-90"/>
            </LinearLayout>
            <net.cachapa.expandablelayout.ExpandableLayout
                android:layout_margin="8dp"
                android:id="@+id/exp_api_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:el_duration="400"
                app:el_expanded="true"
                app:el_parallax="0.5">
                <TextView
                    android:layout_marginTop="10sp"
                    android:id="@+id/tv_request"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:padding="8dp"
                    android:text="Apply"
                    android:textColor="@color/black"/>
            </net.cachapa.expandablelayout.ExpandableLayout>
            <TextView
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:layout_marginTop="10sp"
                android:id="@+id/tv_apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="8dp"
                android:text="Okay"
                android:textColor="@color/white"
                android:background="@drawable/bg_btn_clr"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

